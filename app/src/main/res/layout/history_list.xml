<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="68dp"
    android:layout_marginEnd="8dp"
    android:background="#babdc1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mallnameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="dssdfdsf"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mallnameTextView"
        android:background="#babdc1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/timelogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1.6"
            android:gravity="start"
            android:text="Time In:"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timelogged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="0.4"
            android:gravity="start"
            android:textColor="@color/colorButton"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:background="#babdc1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/timelogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1.5"
            android:gravity="start"
            android:text="Time Out:"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeloggedout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="0.5"
            android:gravity="start"
            android:textColor="@color/colorButton"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>