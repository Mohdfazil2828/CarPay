<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NewColor"
    android:id="@+id/linearLayout"
    tools:context=".activity.activities.OptionActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/newlogo" />


    <Button
        android:id="@+id/btn_user_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_centerInParent="true"
        android:background="#46BDCC"
        android:text="User Login"
        android:fontFamily="@font/thanmon"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_admin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_user_login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:background="#46BDCC"
        android:text="Admin Login"
        android:fontFamily="@font/thanmon"
        android:textColor="@android:color/white" />

</RelativeLayout>